<h1>Manage Roles and Permissions</h1>
<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user=> { %>
            <tr>
                <td>
                    <%= user.username %>
                </td>
                <td>
                    <form action="/superadmin/manage_roles" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="username" value="<%= user.username %>">
                        <select name="role">
                            <option value="superadmin" <%=user.role==='superadmin' ? 'selected' : '' %>>Superadmin
                            </option>
                            <option value="admin" <%=user.role==='admin' ? 'selected' : '' %>>Admin</option>
                            <option value="manager" <%=user.role==='manager' ? 'selected' : '' %>>Manager</option>
                            <option value="branch" <%=user.role==='branch' ? 'selected' : '' %>>Branch</option>
                        </select>
                        <button type="submit">Update Role</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>